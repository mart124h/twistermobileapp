<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:context=".comment_layout">

    <TextView
        android:id="@+id/commentByUser"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="0dp"
        android:layout_marginLeft="13pt"
        android:fontFamily="@font/averia_libre_bold"
        android:text="Comment By @User"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="325dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2pt"
        android:background="#FFFFFF"
        android:backgroundTint="#F8F8F8"
        android:fadingEdge="horizontal"
        android:visibility="visible">


<!--        <EditText-->
<!--            android:layout_width="325dp"-->
<!--            android:layout_height="15pt"-->
<!--            android:layout_marginStart="10dp"-->
<!--            android:layout_marginTop="5pt"-->
<!--            android:layout_marginEnd="10dp"-->
<!--            android:layout_weight="1"-->
<!--            android:gravity="top"-->
<!--            android:textSize="12sp"-->
<!--            android:text="Hello" />-->

        <TextView
            android:id="@+id/commentContent"
            android:layout_width="325dp"
            android:layout_height="15pt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="5pt"
            android:layout_marginEnd="10dp"
            android:layout_weight="1"
            android:text="Hello"
            android:textSize="12sp" />
        <!--                android:text="This is my first post on Twister and I have made sure not to write any negative stuff" />-->


    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/commentDeleteButton"
            android:layout_width="100dp"
            android:layout_height="16pt"
            android:layout_marginLeft="230dp"
            android:backgroundTint="#9CE32929"
            android:text="Delete"
            android:textSize="10sp"
            android:visibility="visible" />

    </LinearLayout>




</LinearLayout>