<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <RelativeLayout
        android:layout_width="349dp"
        android:layout_height="200dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="1dp"
        android:visibility="visible">


        <TextView
            android:id="@+id/commentSelected_message_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/averia_libre_bold"
            android:text="TWIST 3#"
            android:textSize="30sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/list_item_user"
            android:layout_width="298dp"
            android:layout_height="31dp"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="45dp"
            android:layout_marginBottom="5dp"
            android:layout_weight="1"
            android:text=""
            android:textStyle="italic" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="124dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="75dp"
            android:background="#FFFFFF"
            android:backgroundTint="#F8F8F8"
            android:fadingEdge="horizontal">

            <TextView
                android:id="@+id/list_item_content"
                android:layout_width="335dp"
                android:layout_height="110dp"
                android:layout_marginStart="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginEnd="10dp"
                android:layout_marginBottom="10dp"
                android:layout_weight="1" />
            <!--                android:text="This is my first post on Twister and I have made sure not to write any negative stuff" />-->


        </RelativeLayout>




    </RelativeLayout>



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="13pt"
        android:fontFamily="@font/averia_libre_bold"
        android:text="WRITE COMMENT"
        android:textSize="12sp"
        android:textStyle="bold" />

    <RelativeLayout
        android:layout_width="155pt"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="2pt"
        android:background="#FFFFFF"
        android:backgroundTint="#F8F8F8"
        android:fadingEdge="horizontal"
        android:visibility="visible">



        <EditText
            android:id="@+id/messageCommentEditField"
            android:layout_width="335dp"
            android:layout_height="20pt"
            android:layout_marginStart="10dp"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="10dp"
            android:layout_weight="1" />
        <!--                android:text="This is my first post on Twister and I have made sure not to write any negative stuff" />-->


    </RelativeLayout>

    <TextView
        android:id="@+id/commentMessageView"
        android:layout_width="wrap_content"
        android:layout_height="20dp"
        android:layout_gravity="right"
        android:layout_marginStart="0sp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="15pt"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:fontFamily="@font/averia_libre_bold"
        android:text="MAX 15 WORDS"
        android:textSize="10sp" />

    <Button
        android:layout_width="142dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="5pt"
        android:backgroundTint="#9C656565"
        android:onClick="CreateComment"
        android:text="COMMENT"
        android:textSize="15sp" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/messageCommentRecyclerView"
        android:layout_width="match_parent"
        android:layout_height="387dp"
        android:layout_gravity="bottom"
        android:layout_marginHorizontal="5pt"
        android:layout_marginTop="0dp"
        android:layout_weight="15.6">

    </androidx.recyclerview.widget.RecyclerView>

</LinearLayout>